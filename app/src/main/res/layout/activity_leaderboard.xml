<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/logo_red_part" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backToHome"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/monument_extended"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:drawableLeft="@drawable/back_button"
        android:id="@+id/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leaderBoard"
        android:background="@color/gray"
        android:fontFamily="@font/druk_wide_bold"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leaderboardTxt"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:fontFamily="@font/monument_extended"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/leaderboardListView"
        android:scrollbars="vertical"
        android:layout_marginTop="15dp"/>

</LinearLayout>