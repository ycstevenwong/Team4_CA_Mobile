<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityFetchImages">

    <LinearLayout
        android:id="@+id/topLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        >

    <LinearLayout
        android:id="@+id/userInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/url"

            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:text="https://www.stockio.com/"
            android:importantForAutofill="no"
            android:imeOptions="actionSend"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:inputType="textNoSuggestions"
            />

        <Button
            android:id="@+id/fetchBtn"
            android:padding="2dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monument_extended"
            android:text="@string/fetch"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            android:background="@color/gray"
            style="?android:attr/progressBarStyleHorizontal"/>



        <TextView
            android:id="@+id/progressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/monument_extended"
            android:text="@string/download"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row01"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"

        app:layout_constraintTop_toBottomOf="@+id/topLayout" >

        <ImageView
            android:id="@+id/image01"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"

            />

        <ImageView
            android:id="@+id/image02"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image03"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image04"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row02"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/row01" >
        <ImageView
            android:id="@+id/image05"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image06"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image07"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image08"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row03"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/row02" >
        <ImageView
            android:id="@+id/image09"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image10"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image11"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image12"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row04"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/row03" >
        <ImageView
            android:id="@+id/image13"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image14"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image15"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image16"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row05"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/row04" >
        <ImageView
            android:id="@+id/image17"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image18"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image19"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>
        <ImageView
            android:id="@+id/image20"
            style="@style/imageStyle"
            app:srcCompat="@android:color/holo_blue_bright"/>


    </LinearLayout>

<LinearLayout  android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"

    app:layout_constraintTop_toBottomOf="@+id/row05"
    >
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/app_image" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
